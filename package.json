{
  "name": "@u4/opencv-build",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple script to auto build recent OpenCV + contrib version via npm 2024 Edition",
  "main": "cjs/src/index.js",
  "module": "esm/src/index.js",
  "types": "types/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./types/index.d.ts",
      "require": "./cjs/src/index.js",
      "import": "./esm/src/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf cjs/src esm/src types",
    "build": "tsc --build tsconfig.json tsconfig-cjs.json tsconfig-types.json --pretty",
    "build3x": "npm run build && node bin/main.cjs --keepsource",
    "install_macm1": "npm run build && node bin/main.cjs --version 4.5.5 --flag=\"-DCMAKE_SYSTEM_PROCESSOR=arm64 -DCMAKE_OSX_ARCHITECTURES=arm64\"",
    "install_4_6_0": "npm run build && node bin/main.cjs --version 4.6.0",
    "install_4_6_0_cuda_30XX": "npm run build && cross-env OPENCV4NODEJS_DISABLE_AUTOBUILD= node bin/main.cjs --keepsource --version 4.6.0 --cuda --cudaArch=8.6",
    "install_4_7_0_cuda_30XX": "npm run build && cross-env OPENCV4NODEJS_DISABLE_AUTOBUILD= node bin/main.cjs --keepsource --version 4.7.0 --cuda --cudaArch=8.6",
    "do-install": "node bin/main.cjs",
    "cleanbuild": "rimraf lib dist && npm run build",
    "postinstallDISABLED": "npm run do-install",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts",
    "test": "cross-env NODE_OPTIONS=\"-r ts-node/register --no-warnings\" TS_NODE_PROJECT=tsconfig-cjs.json mocha 'test/**/*.test.ts'",
    "ncu": "npx --yes npm-check-updates -i",
    "export": "npx --yes @arethetypeswrong/cli $(npm pack)",
    "exportWin": "npm pack && npx --yes @arethetypeswrong/cli u4-opencv-build-1.0.0.tgz"
  },
  "bin": {
    "opencv-build-npm": "bin/main.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UrielCh/npm-opencv-build.git"
  },
  "keywords": [
    "opencv",
    "build",
    "opencv4nodejs"
  ],
  "contributors": [
    "Uriel Chemouni <uchemouni@gmail.com> (https://uriel.ovh/)",
    "justadudewhohacks (https://github.com/justadudewhohacks)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UrielCh/npm-opencv-build/issues"
  },
  "homepage": "https://github.com/UrielCh/npm-opencv-build#readme",
  "dependencies": {
    "glob": "^10.4.1",
    "npmlog": "^7.0.1",
    "picocolors": "^1.0.1",
    "rimraf": "^5.0.7"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.2",
    "@types/npmlog": "^7.0.0",
    "chai": "^5.1.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "eslint": "^9.4.0",
    "mocha": "^10.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "8.0.0-alpha.30"
  },
  "files": [
    "esm", "cjs", "types", "bin"
  ]
}
